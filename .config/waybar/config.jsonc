    "niri/workspaces": {
        "all-outputs": true,
        "format": "{output}:{index}"
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },

    "custom/pacman": {
        "format": "{}  ÔÜá",
        "interval": 3600,                     // every hour
        "exec": "checkupdates | wc -l",       // # of updates
        "exec-if": "exit 0",                  // always run; consider advanced run conditions
        "on-click": "xterm -e 'fish' '-c pacupd'; pkill -SIGRTMIN+8 waybar", // update system
        "signal": 8
    },

    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        //"format-wifi": "{essid} ({signalStrength}%) Ôá´"",
        "format-ethernet": "ÔÇ¨",
        //"format-ethernet": "{ipaddr}/{cidr} Ôûñ",
        "tooltip-format": "{ifname}: {ipaddr}",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "ÔÑß ",
        "format-alt": "{ifname}: {ipaddr}"
    },

    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": false,
        "on-click": "xterm -e 'btop'" // update system
    },

    "memory": {
        "format": "{}% ÔÉâ",
        "on-click": "xterm -e 'btop'" // update system
    },

    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "hwmon-path": "/sys/class/hwmon/hwmon0/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },

    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        //"format": "{name} {icon}",
        "format": {
            "numlock": " N {icon}",
            "capslock": "C {icon}"
        },
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    
    "pulseaudio": {
        "scroll-step": 5, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "0% ÔÄ¶ {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "0% ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },

    "niri/language": {
        "format": "{shortDescription} {variant}"
    },

